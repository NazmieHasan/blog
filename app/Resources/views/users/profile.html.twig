{% extends 'base.html.twig' %}

{% block main %}

    <h1>Здравей, {{ user.fullName }}!</h1>

    <h3>Имейл: {{ user.email }}</h3>

    <div><img class="rounded-circle" src=" {{ asset('uploads/images/users/'  ~ user.image ) }}"
              width="200px" height="100px" /></div>

    <a href="{{ path('user_edit_profile') }}" class="btn btn-success btn-sm">Редактиране на профила</a>

    <br /> <br />
    <p>
    <a href="{{ path('user_mailbox') }}" class="btn btn-info btn-sm">
        <span class="glyphicon glyphicon-envelope"></span>({{ msg|length }}) Непрочетени съобщения
    </a>
    </p>

{% endblock %}