{% extends 'base.html.twig' %}
{% block main %}
<div class="container body-content">
    <div class="well">
        <h2>Всички категории -
            <a href="{{ path('admin_categories_create') }}" class="btn btn-warning">Създай категория</a>
        </h2>
        <div class="row">
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Име</th>
                    <th>Действия</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                    <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.getName() }}</td>
                    <td>
                        <a href="#">Редактирай</a>
                        <a href="#">Изтрий</a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}