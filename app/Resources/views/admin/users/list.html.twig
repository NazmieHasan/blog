{% extends 'base.html.twig' %}
{% block main %}
    <div class="container body-content">
        <div class="well">
            <h2>Всички потребители</h2>
            <div class="row">
                <table class="table table-striped table-hover ">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Име</th>
                        <th>Имейл</th>
                        <th>Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                    <tr>
                        <tr {% if user.isAdmin() %}class="info" {% endif %}>
                        <td>{{ user.id }}</td>
                        <td>{{ user.fullName }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="#">Редактирай</a>
                            <a href="#">Изтрий</a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}