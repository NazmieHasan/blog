<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}Рент хоум{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap-datetimepicker.min.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <script src="{{ asset('js/jquery-3.4.1.min.js') }}"></script>
    <script>
        setTimeout(function() {
            $('#info').fadeOut();
        }, 2000)
    </script>
</head>

<body id="{% block body_id %}{% endblock %}">

{% block header %}
    <header>
        <div class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a href="{{ path('blog_index') }}" class="navbar-brand">РЕНТ ХОУМ</a>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        {% if app.user %}
                            {% if app.user.isAdmin() %}
                                <li>
                                    <a href="{{ path('admin_index') }}" class="navbar-brand">
                                        Админ Панел
                                    </a>
                                </li>
                                {% endif %}
                        <li>
                            <a href="{{ path('user_mailbox') }}" class="navbar-brand">
                                <span class="glyphicon glyphicon-envelope"></span>Съобщения
                            </a>
                        </li>
                        <li>
                        <a href="{{ path('user_profile') }}" class="navbar-brand">
                        Моят профил
                        </a>
                        </li>
                            <li>
                                <a href="{{ path('my_articles') }}" class="navbar-brand">
                                    Моите обяви
                                </a>
                            </li>
                        <li>
                        <a href="{{ path('article_create') }}" class="navbar-brand">
                        Създай обява
                        </a>
                        </li>
                            <li>
                                <a href="{{ path('user_profile') }}">
                                    <img alt="None" class="rounded-circle"
                                         src=" {{ asset('uploads/images/users/'  ~ app.Getuser().image ) }}" width="50px" height="20px" />
                                </a>
                            </li>
                            <li>
                        <a href="{{ path('security_logout') }}" class="navbar-brand">
                        Изход
                        </a>
                        </li>
                        {% else %}
                        <li>
                        <a href="{{ path('user_register') }}" class="navbar-brand">
                        Регистрация
                        </a>
                        </li>
                        <li>
                        <a href="{{ path('security_login') }}" class="navbar-brand">
                        Вход
                        </a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

<div class="container body-container">
    {% block body %}
        <div class="row">
            <div id="main" class="col-sm-9">
                {% block main %}{% endblock %}
            </div>
        </div>
    {% endblock %}
</div>

{% block footer %}
    <footer>
        <div class="container modal-footer">
            <p>&copy; 2020 - All Rights Reserved.</p>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/moment.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script src="{{ asset('js/bootstrap-datetimepicker.min.js') }}"></script>
{% endblock %}

</body>
</html>
